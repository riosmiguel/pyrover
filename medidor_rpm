
import math

tg= -2
 
target_phi = (90 - math.degrees(math.atan2(tg, 1)) + 360) % 360 # direccion en grados respecto al Norte

perpend = (90 - math.degrees(math.atan2(-1/tg, 1)) + 360) % 360 # direccion en grados respecto al Norte

print ("tg =", tg, "    ang =", target_phi, "     perpend =", perpend)

exit()

import RPi.GPIO as GPIO
import time

global event_count

GPIO.setmode(GPIO.BCM)  # numeración de los pines

SENSOR_PIN = 17  # pin conectado al sensor Hall
GPIO.setup(SENSOR_PIN, GPIO.IN, pull_up_down = GPIO.PUD_UP)  # Configura el pin SENSOR_PIN como entrada pull-up

event_count = 0 # veces que pasa el imán

# cuando hay interrupción, suma 1 a event_count
def hall_sensor_callback(channel):
    
    event_count += 1
 
# si detecta el imán, interrumpe y llama la función hall_sensor_callback
GPIO.add_event_detect(SENSOR_PIN, GPIO.RISING, callback = hall_sensor_callback)

try:
    while True:
        # Cada segundo, imprime el número de eventos y resetea el contador
        time.sleep(1)
        print(f"Eventos por segundo: {event_count}")
        event_count = 0

except KeyboardInterrupt:
    # Limpiar la configuración GPIO al finalizar
    GPIO.cleanup()
    print("Programa terminado")
   